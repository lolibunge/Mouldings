<article class="site-page" data-template-page>
  <header class="page-masthead">
    <h1 class="page-title">
      {{ page.title }}
    </h1>
  </header>

  {% if page.content != blank %}
    <div class="page-content rte" {% if page.title == 'Search Results' %} style="max-width: initial"{%endif%}>
      {{ page.content }}
    </div>
  {% endif %}
</article>
