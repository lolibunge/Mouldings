/*   MEDIA QUERIES */
  
  @media only screen and (max-width:768px){
    .grid-item {
      width: 100%;
    }
    
    .grid-item ul li{
      font-size:1em;
    }
  }
 
  
  @media only screen and (max-width:480px){
    ul.tabs {
        flex-direction: column;
    }
    ul.tabs li {
      margin-right: 0px;
      border: 1px solid gray;
      border-top: 0px;
    }
    
    ul.tabs li:first-child {
      margin-right: 0px;
      border-top: 1px solid gray;
    }
    
     #tab-4 {
      padding: 0;
    }

    #tab-4 iframe {
        width: 100%;
    }

  }


/* END OF MEDIA QUERIES */

