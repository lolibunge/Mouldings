/*================ Tabbed  Content ================*/

ul.tabs{
  margin: 0px;
  padding: 0px;
  list-style: none;
  display: flex;
}
ul.tabs li{
  background: #ededed;
  border: 1px solid #ededed;
  border-width: 1px 1px 0px 1px;
  display: inline-block;
  text-transform: uppercase;
  padding: 5px 5px;
  margin-bottom:0;
  margin-right:10px5;
  cursor: pointer;
  font-weight:300;
}

  
  ul.tabs li {
    padding: 10px;
    margin-right:10px;
    display:block;
  }
  

ul.tabs li.current{
  background: #fff;
  position: relative;
  top:1px;
}

.tab-content{
  display: none;
  background: #fff;
  padding: 10px;
  border: 1px solid #ededed;
    min-height:300px;

}

  
  .tab-content{
  display: none;
  background: #fff;
  padding:20px 10px;
  border: 1px solid #ededed;
}

.tab-content.current{
  display: inherit;
}

.tab-link {
  font-size:1.125em;
}

.btn-group {
    font-size: 0;
    margin: 20px 0 5px;
}

.btn-message {
    min-width: 0;
    width: calc(50% - 15px);
    display: inline-block;
    font-size: 16px;
    padding-top: 15px;
}

.btn-group .btn {
    min-width: 0;
    width: calc(50% - 15px);
}

.product-template-section .btn-msg-right {
    margin-left: 30px;
}
  
.template-product  .grid {
  max-width: 1500px;
  margin:auto;
}

.template-product  .add-bottom {
  margin-bottom: 60px;
}
.template-product  .half-top {
    margin-top: 30px;
}
.template-product  .grid-item {
  width:100%;
    float: none;
    padding:0 30px;
    vertical-align: top;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
  
  /*--- Tabs 2 ---*/
  
  #tab-2 tr{
    word-wrap: break-word;
  }
  
  #tab-2 td, #tab-2 th {
      text-align: left;
      padding: 15px;
      border: 1px solid #e4e4e4;
  }
  
  #tab-2 th {
      background: #ededed;
      font-weight: 300;
  }

  #tab-2 .btn{
    display: inline-block;
    padding: 19px 40px;
    margin: 0 0 5px 0;
    line-height: 1.42;
    text-decoration: none;
    text-align: center;
    vertical-align: middle;
    white-space: nowrap;
    cursor: pointer;
    border: 1px solid transparent;
    border-radius: 0;
    font-family: "Nunito Sans",sans-serif;
    font-weight: 300;
    font-size: 20px;
    text-transform: uppercase;
    background-color: #626a81;
    color: #fff;
}
/*   END OF TAB 2 */
  
/*  TAB 4  */
  
  
#tab-4  .video-wrapper {
    position: relative;
    overflow: hidden;
    max-width: 100%;
    padding-bottom: 56.25%;
    height: 0;
    height: auto;
}
  
#tab-4  hr {
    clear: both;
    border-top: solid #e4e4e4;
        border-top-width: medium;
    border-width: 1px 0 0;
    margin: 30px 0;
    height: 0;
}
  
  div#tab-4 iframe {
    width: 100%!important;
}
  
/*   END OF TAB 4 */
  
/*   TAB 9 */
  

